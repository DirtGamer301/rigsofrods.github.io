= partial "header"

.row.main-start
	.small-12.columns.bloglist
		article
			header
				h1
					= I18n.t('blog.title')
			- blog.local_articles[0...10].each do |article|
				.small-12.columns.blog-entry
					header.bloglist
						h2
							= article.data.title
						.details
							span.author#author
								=> article.data.firstname
								= article.data.lastname
							br
							span.email#email
								a href="#{article.data.profile}"
									| @#{article.data.nick}
							br
							span#revdate
								= article.data.date

					div id="summary"
						p
							= article.summary

					- article.tags.each do |tag|
						span.label>
							= tag

					.right
						a href='#{article.url}'
							=> I18n.t('blog.readmore')
							| â†’

		.small-12.columns
			h4
				= I18n.t('blog.archivelink')

= partial "footer"
