<% wrap_layout :base do %>
	<div id="header">
		<h1><%= current_page.title %></h1>
		<div class="details">
			<span id="author" class="author"><%= current_page.data.author %></span>
			<br/>
			<span id="email" class="email"><a href="<%= current_page.data.profile %>">@<%= current_page.data.nick %></a></span>
			<br/>
			<span id="revdate"><%= current_page.date.strftime("%d %B %Y") %></span>
		</div>
	</div>
	<div id="content">
    	<%= yield %>
    </div>

    <b><a class="previous" href="/blog"><span class="fa fa-arrow-left"></span> Return to blog index</a></b>
<% end %>

